page{
    background-color: #f5f5f5;
}
.send-box{
    position: relative;
    width: 100%; 
    margin-bottom: 4rpx;
    box-shadow: 2rpx 4prx 2rpx #ccc; 
    background-color: #fff !important;
}
.device-info{
    font-size: 28rpx;
    color: #333;
    padding: 10px 15px;
}
.device-info text{
    display: block;
    margin-bottom: 15rpx;
}
.device-info text:first-child{
    font-size: 32rpx;
}
.device-info text:last-child{
    margin-bottom: 0;
}
.send-box .status{
    display: block;
    position: absolute;
    right: 15px;
    top: 10px;
    color: #07c160;
    font-size: 28rpx;
    z-index: 10;
}
.send-box .status.disabled{
    color: #999
}
.send-box button{
    /* background-color: #07c160;
    border-color: #07c160; */
    font-size: 32rpx !important;
    margin-left: 20rpx;
    font-weight: 900;
    min-width: 60rpx;
}
.home-search{
    position: relative;
    width: 100%;
    background-color: #fff !important;
}
.home-search .scanCode-image{
    position: absolute;
    display: block;
    right: 30px;
    top: 17.5px;
    width: 20px;
    height: 20px;
    z-index: 50;
}
.home-search input{
    width: 80%;
    padding-right: 50px !important;
    font-size: 28rpx;
}
.rack-info{
    width: 100%;
    margin-top: 20rpx;
}
.van-picker{
    position: fixed;
    left: 0;
    bottom: 0;
}

.borrow-device{
    position: relative;
    background-color: #fff;
    margin-bottom: 0;
    padding: 60rpx 20rpx;
    border-radius: 6rpx; 
}
.borrow-device .line{
    position: relative;
    width: 650rpx;
    padding: 0 10rpx;
    height: 88rpx;
    margin-bottom: 80rpx;
}
.borrow-device input{
    float: left;
    width: 70%;
    font-size: 32rpx;
    color: #333;
    height: 88rpx;
    border: 1px solid #999;
    padding-left: 15rpx !important;
}

.borrow-device .scan-btn{
    float: right;
    height: 88rpx;
    line-height: 88rpx;
    border-radius: 6rpx;
    padding: 0 25rpx;
    text-align: center;
    color: #fff;
    background-color: #07c160 !important;
    border-color: #07c160  !important;
    font-size: 32rpx !important;
}
.pop-btn{
    position: relative;
    padding-bottom: 60rpx;
    text-align:center;
    width: 100%;
    width: 610rpx !important;
    margin: 0 auto;
    height: 82rpx;
    line-height: 80rpx;
    border-radius: 6rpx;
    padding: 0 25rpx;
    text-align: center;
    color: #fff;
    background-color: #074195 !important;
    border-color: #074195  !important;
    font-size: 32rpx !important;
    cursor: pointer;
}
.borrow-device .scanCode-image{
    float: right;
    height: 60rpx;
    width: 60rpx;
    margin-top: 16rpx;
    margin-right:60rpx;
}
.rack-history{
    width: 100%;
}
.van-tab--active{
    color: #074195 !important;
}
.van-tabs__line{
    background-color: #074195 !important;
}
.top-tab{
    width: 100%;
}