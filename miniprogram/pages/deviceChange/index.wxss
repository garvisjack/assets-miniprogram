/* miniprogram/pages/deviceInfo/index.wxss */
page{
    background-color: #f5f5f5;
}
.deviceInfo-top{
    position: relative;
    width: 100%;
    height: 180rpx;
    padding: 40rpx 0;
    background-color: #fff;
    margin-bottom: 20rpx;
    margin-top:20rpx;
}
.deviceInfo-top image{
    float: left;
    width: 180rpx;
    height: 180rpx;
    margin: 0 0 0 15px;
    border: 1px solid #eee;
}
.deviceInfo-top .top-info{
    float: left;
    margin-left: 60rpx;
    margin-top:12rpx;
}
.deviceInfo-top .top-info .number{
    font-size: 32rpx;
    color: #333;
    margin-bottom: 15rpx;
}
.deviceInfo-top .top-info .status{
    font-size: 32rpx;
    color: #333;
    margin-bottom: 15rpx;
}
.deviceInfo-top .top-info .status:last-child{
    margin-bottom: 0;
}
.deviceInfo-top .top-info .status .label{
    text-decoration:underline;color:#074195
}
.deviceInfo-top .device-status{
    position: absolute;
    right: 15px;
    top: 40rpx;
    font-size: 32rpx;
}
.deviceInfo-bottom{
    width: 100%;
    background-color: #fff;
}
.home-search{
    position: relative;
    width: 100%;
  }
  .home-search .scanCode-image{
    position: absolute;
    display: block;
    right: 30px;
    top: 17.5px;
    width: 20px;
    height: 20px;
    z-index: 50;
  }
  .home-search input{
    width: 80%;
    padding-right: 50px !important;
    font-size: 28rpx;
  }

  .van-picker{
    position: fixed;
    left: 0;
    bottom: 0;
}

.borrow-device{
    position: relative;
    background-color: #fff;
    margin-bottom: 0;
    padding: 60rpx 20rpx;
    border-radius: 6rpx; 
}
.borrow-device .line{
    position: relative;
    width: 650rpx;
    padding: 0 10rpx;
    height: 88rpx;
    margin-bottom: 80rpx;
}
.borrow-device input{
    float: left;
    width: 70%;
    font-size: 32rpx;
    color: #333;
    height: 88rpx;
    border: 1px solid #999;
    padding-left: 15rpx !important;
}

.borrow-device .scan-btn{
    float: right;
    height: 88rpx;
    line-height: 88rpx;
    border-radius: 6rpx;
    padding: 0 25rpx;
    text-align: center;
    color: #fff;
    background-color: #07c160 !important;
    border-color: #07c160  !important;
    font-size: 32rpx !important;
}
.pop-btn{
    position: relative;
    padding-bottom: 60rpx;
    text-align:center;
    width: 100%;
    width: 610rpx !important;
    margin: 0 auto;
    height: 82rpx;
    line-height: 80rpx;
    border-radius: 6rpx;
    padding: 0 25rpx;
    text-align: center;
    color: #fff;
    background-color: #074195 !important;
    border-color: #074195  !important;
    font-size: 32rpx !important;
    cursor: pointer;
}
.confirm-btn{
    width: 80%;
    margin: 0 10%;
    margin-top: 100rpx;
}
.confirm-btn button{
    color: #fff !important;
    font-size: 32rpx !important;
    background-color: #074195 !important;
    width: 100% !important;
    border-color: #074195 !important;
}