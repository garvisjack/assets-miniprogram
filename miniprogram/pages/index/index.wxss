/**index.wxss**/

page {
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.container{
  background: #f5f5f5;
}
.home-search{
  position: relative;
  width: 100%;
  padding: 5rpx 0;
}
.home-search .scanCode-image{
  position: absolute;
  display: block;
  right: 20px;
  top: 13.5px;
  width: 20px;
  height: 20px;
  z-index: 50;
}
.home-search input{
  width: 70%;
  padding-right: 50px !important;
}
.home-banner,.home-banner swiper{
  width: 100%;
  height: 400rpx;
}
.home-banner .slide-image{
  width: 100%;
  height: 100%;
}
.home-device-status{
  display: flex;
  width: 100%;
  height: 140rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
}
.home-device-status .item{
  flex: 1;
  color: #333;
  padding: 20rpx;
  font-size: 32rpx;
  cursor: pointer;
}
.home-device-status .item:first-child{
  border-right: 1px solid #ddd;
}
.home-device-status .item-num {
  font-size: 28rpx;
  margin-top: 20rpx;
  color: #333;
}
.home-device-status .item-num text{
  display: inline-block;
}
.home-device-status .item-num .expired-num{
  color: red;
}
.home-box{
  width: 100%;
  background-color: #fff;
  padding-bottom: 20rpx;
}
.home-box .title{
  color: #333;
  font-size: 32rpx;
  padding: 20rpx;
}
.home-box .title .title-image{
  float: left;
  width: 32rpx;
  height: 32rpx;
  margin: 7.5rpx 20rpx 0 0;
}
.home-box .line{
  width: 100%;
  height: 160rpx;
}
/* .home-box .line:last-child{
  margin-top: 20rpx;
} */
.home-box .line-item{
  float: left;
  width: 25%;
  height: 160rpx;
}
.home-box .line-item image{
  display: block;
  margin: 20rpx auto;
  width: 80rpx;
  height: 80rpx;
  border: 1px solid #ccc;
}
.home-box .line-item text{
  display: block;
  width: 100%;
  font-size: 28rpx;
  text-align: center;
  color: #333;
}