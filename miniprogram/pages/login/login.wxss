/* miniprogram/pages/login/login.wxss */
page{
    background-color: #fff;
}
.login-box{
    width: 80%;
    margin: 120rpx 10%;
    margin-top: 0;
}
.login-logo{
    display: block;
    width: 750rpx;
    height: 480rpx;
}
.login-box .field{
    margin-bottom: 40rpx;
    height: 100rpx;
    line-height: 100rpx;
    background-color: #f5f5f5;
}
.login-box .field:last-child{
    margin-bottom: 0;
}
.login-box .field text{
    float: left;
    width: 100rpx;
    font-size: 32rpx;
    color: #333;
    margin-right: 30rpx;
    height: 100rpx;
    line-height: 100rpx;
}
.login-box .field input{
    display: inline-block;
    font-size: 32rpx;
    color: #333;
    height: 100rpx;
}
.login-box button{
    background-color: #074195 !important;
    border-color: #074195  !important;
    font-size: 32rpx !important;
    width: 100% !important;
}
.login-box image{
    float: left;
    width: 36rpx;
    height: 36rpx;
    margin: 32rpx 20rpx 32rpx 20rpx;
}
.login-tips{
    font-size: 28rpx;
    text-align: center;
    color: #333;
    line-height: 28rpx;
}