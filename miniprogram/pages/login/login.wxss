/* miniprogram/pages/login/login.wxss */
page{
    background-color: #f5f5f5;
}
.login-box{
    width: 80%;
    margin: 48% 10%;
}
.login-box .field{
    margin-bottom: 40rpx;
    height: 100rpx;
    line-height: 100rpx;
    background-color: #fff;
}
.login-box .field:last-child{
    margin-bottom: 0;
}
.login-box .field text{
    float: left;
    width: 100rpx;
    font-size: 16px;
    color: #333;
    margin-right: 30rpx;
    height: 100rpx;
    line-height: 100rpx;
}
.login-box .field input{
    display: inline-block;
    font-size: 16px;
    color: #333;
    height: 100rpx;
}
.login-box button{
    background-color: #074195;
    border-color: #074195;
}