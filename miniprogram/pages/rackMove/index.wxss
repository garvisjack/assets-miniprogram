/* miniprogram/pages/borrowDevice/index.wxss */
page{
    background-color: #f5f5f5;
}
.borrow-device{
    position: relative;
    background-color: #fff;
    margin: 35% auto;
    margin-bottom: 0;
    padding: 100rpx 20rpx;
    box-shadow: 2rpx 4rpx 2rpx #eee;
    border-radius: 6rpx; 
}
.borrow-device .line{
    position: relative;
    width: 650rpx;
    padding: 0 10rpx;
    height: 100rpx;
    margin-bottom: 30rpx;
}
.borrow-device input{
    float: left;
    width: 70%;
    font-size: 32rpx;
    color: #333;
    height: 100rpx;
    border: 1px solid #999;
}

.borrow-device .scan-btn{
    float: right;
    height: 100rpx;
    line-height: 100rpx;
    border-radius: 6rpx;
    padding: 0 25rpx;
    text-align: center;
    color: #fff;
    background-color: #07c160 !important;
    border-color: #07c160  !important;
    font-size: 32rpx !important;
}
.borrow-device button{
    background-color: #074195 !important;
    border-color: #074195  !important;
    font-size: 32rpx !important;
    width: 100% !important;
}
.van-cell{
    padding: 30rpx 0 !important;
    color: #666 !important;
}