/* miniprogram/pages/deviceInfo/index.wxss */
page{
    background-color: #f5f5f5;
}
.deviceInfo-top{
    width: 100%;
    height: 180rpx;
    padding: 40rpx 0;
    background-color: #fff;
    margin-bottom: 20rpx;
}
.deviceInfo-top image{
    float: left;
    width: 180rpx;
    height: 180rpx;
    margin: 0 0 0 15px;
    border: 1px solid #eee;
}
.deviceInfo-top .top-info{
    float: left;
    margin-left: 60rpx;
}
.deviceInfo-top .top-info .number{
    font-size: 32rpx;
    color: #333;
    margin-bottom: 25rpx;
}
.deviceInfo-top .top-info .status{
    font-size: 28rpx;
    color: #333;
    margin-bottom: 15rpx;
}
.deviceInfo-top .top-info .status:last-child{
    margin-bottom: 0;
}
.deviceInfo-bottom{
    width: 100%;
    background-color: #fff;
}
